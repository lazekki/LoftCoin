<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- https://material.io/develop/android/theming/color/ -->
        <!-- https://medium.com/over-engineering/setting-up-a-material-components-theme-for-android-fbf7774da739 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorError">@color/colorNegative</item>
        <item name="colorOnError">@color/secondaryTextColor</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/dark_six</item>


        <item name="textAppearanceTitle">@style/TextAppearance.H1.Title</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="TextAppearance.H1.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <attr name="textAppearanceTitle" format="reference"></attr>
    <attr name="buttonStyleGradient" format="reference"></attr>

</resources>
